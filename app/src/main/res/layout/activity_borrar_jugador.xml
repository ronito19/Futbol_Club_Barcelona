<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BorrarJugadorActivity">

    <TextView
        android:id="@+id/txt_borrar_provincia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/borrar_jugador1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_borrar_jugador"
        android:layout_width="362dp"
        android:layout_height="121dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_borrar_provincia"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/bt_borrarp"
        android:layout_width="269dp"
        android:layout_height="56dp"
        android:layout_marginTop="108dp"
        android:onClick="borrar_jugador"
        android:text="@string/borrar_provincia"
        app:layout_constraintEnd_toEndOf="@+id/sp_borrar_jugador"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/sp_borrar_jugador"
        app:layout_constraintTop_toBottomOf="@+id/sp_borrar_jugador" />
</androidx.constraintlayout.widget.ConstraintLayout>