<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActualizarJugadorActivity1">

    <Spinner
        android:id="@+id/sp_actualizarj"
        android:layout_width="281dp"
        android:layout_height="94dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_actualizar_jugador1"
        app:layout_constraintStart_toStartOf="@+id/txt_actualizar_jugador1"
        app:layout_constraintTop_toBottomOf="@+id/txt_actualizar_jugador1"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_actualizar_jugador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/actualizar_jugador1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_siguiente_actualizarj"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_marginTop="92dp"
        android:onClick="siguienteactualizarprovincia1"
        android:text="@string/siguiente1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_actualizarj" />
</androidx.constraintlayout.widget.ConstraintLayout>